{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-nest-mongo/shared-lib": [
        "shared-lib/src/index.ts"
      ],
      "@shared": [
        "frontend/src/app/shared/index"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}